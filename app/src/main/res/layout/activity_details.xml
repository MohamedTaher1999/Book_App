<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:layout_height="match_parent"
    tools:context="com.example.taher.listview.DetailsActivity">



    <TextView
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:id="@+id/Book_PublishedDate"
        android:textColor="@color/author"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/book_publisher"
        android:layout_alignStart="@+id/book_publisher" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:id="@+id/book_image"

        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Book_PublishedDate"
        android:layout_alignStart="@+id/Book_PublishedDate" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textAlignment="center"
        android:textColor="@color/title"
        android:id="@+id/book_title"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/book_image"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/book_publisher"
        android:textColor="@color/title"
        android:layout_below="@+id/Book_PublishedDate"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="1500dp"
        android:layout_height="200dp"
        android:id="@+id/scrollView2"
        android:scrollbars="vertical"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/book_publisher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:id="@+id/des"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </ScrollView>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_shape"
        android:text="Add to My Favourite"
        android:id="@+id/btn_fav"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/book_image"
        android:layout_toEndOf="@+id/book_image"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />




</RelativeLayout>
